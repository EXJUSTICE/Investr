<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_date_interval_fragment2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"



    >

    <LinearLayout
        android:orientation="vertical" android:layout_width="wrap_content"


        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"


        android:layout_height ="wrap_content"
        android:minHeight="50dp"
        android:minWidth="100dp"
        android:weightSum="1">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Select your default interval">

        </TextView>
        <Button
            android:text="2 weeks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twoweeks"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft ="27dp"
            android:paddingRight="27dp"
            android:layout_marginTop="20dp"

            android:layout_above="@+id/onemonth"
            android:layout_centerVertical="true" />

        <Button
            android:text="1 month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/onemonth"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft ="25dp"
            android:paddingRight="25dp"

            android:layout_above="@+id/threemonths"
            android:layout_alignEnd="@+id/threemonths" />



        <Button
            android:text="3 months"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/threemonths"



            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft ="20dp"
            android:paddingRight="20dp"
            android:layout_gravity="center"
             />
        <Button
            android:text="6 months"
            android:layout_height="wrap_content"
            android:layout_width ="wrap_content"
            android:id="@+id/sixmonths"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft ="20dp"
            android:paddingRight="20dp"
            android:layout_gravity="center"
            />
        <Button
            android:text="12 months"
            android:layout_height="wrap_content"
            android:layout_width ="wrap_content"
            android:id="@+id/twelvemonths"
            android:padding="16dp"
            android:layout_gravity="center"
            />

    </LinearLayout>
</FrameLayout>